  . /opt/local/etc/profile.d/bash_completion.sh
fi

source ~/.toys/config/bash/completions/ssh

git config --global alias.graph 'log --graph --decorate'

alias fixssh='export $(tmux showenv SSH_AUTH_SOCK)'

