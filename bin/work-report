#!/bin/bash -l

task completed | grep $1 | awk -F' ' '{ print $2 }' | xargs -I '{}' grep -nR {} ~/.notes/*.wiki | awk -F: '{ print $1 ":" sprintf("%09s", $2) ":" $3 }' | sort | awk -F: 'BEGIN { header="" } { if($1 != header) { header = $1; print ""; print $1 ":"; } }; /X|.|o|O|S/ { print $3 }' | sed 's/\[X\]//g' | sed 's/#.*$//g' | sed 's/\*/-/g' | sed 's/  / /g' | sed 's/!//g' | sed 's/([0-9]*-[0-9]*-[0-9]*)//g' | sed 's/(\[\[//g'
